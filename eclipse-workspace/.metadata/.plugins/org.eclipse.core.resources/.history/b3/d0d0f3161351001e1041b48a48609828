package com.multicampus.biz.board;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.multicampus.biz.common.LogAdvice;
import com.multicampus.biz.common.LogAdviceAdvanced;

// 4. Service 구현 클래스(비즈니스 로직 처리 담당)
@Service("boardService")
public class BoardServiceImpl implements BoardService {
	
	// Type Injection
	@Autowired
	private BoardDAO boardDAO;
	
	public BoardServiceImpl() {
		System.out.println("===> BoardServiceImpl 생성");
	}

//	public void setBoardDAO(BoardDAO boardDAO) {
//		this.boardDAO = boardDAO;
//	}

	public void insertBoard(BoardVO vo) {
		LogAdviceAdvanced log = new LogAdviceAdvanced();
		log.printLog();
		boardDAO.insertBoard(vo);
	}

	public void updateBoard(BoardVO vo) {
		LogAdviceAdvanced log = new LogAdviceAdvanced();
		log.printLog();
		boardDAO.updateBoard(vo);
	}

	public void deleteBoard(BoardVO vo) {
		LogAdviceAdvanced log = new LogAdviceAdvanced();
		log.printLog();
		boardDAO.deleteBoard(vo);
	}

	public BoardVO getBoard(BoardVO vo) {
		LogAdviceAdvanced log = new LogAdviceAdvanced();
		log.printLog();
		return boardDAO.getBoard(vo);
	}

	public List<BoardVO> getBoardList(BoardVO vo) {
		LogAdviceAdvanced log = new LogAdviceAdvanced();
		log.printLog();
		return boardDAO.getBoardList(vo);
	}

}






